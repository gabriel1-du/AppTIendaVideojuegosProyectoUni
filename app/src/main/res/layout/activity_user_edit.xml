<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adminUi.UserEditActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/labelUserId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/label_id"
            android:textColor="@color/textPrimary" />

        <EditText
            android:id="@+id/editUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text"
            android:layout_marginTop="8dp"
            tools:text="usr_123" />

        <TextView
            android:id="@+id/labelUserCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/label_created"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editUserCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:inputType="text"
            android:layout_marginTop="8dp"
            tools:text="2025-10-20T12:34:56Z" />

        <TextView
            android:id="@+id/labelUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/label_name"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_marginTop="8dp"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/labelUserEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/label_email"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/editUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:layout_marginTop="8dp"
            tools:text="john.doe@example.com" />

        <TextView
            android:id="@+id/labelUserAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/label_admin"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="12dp" />

        <Switch
            android:id="@+id/switchUserAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:checked="true" />

        <TextView
            android:id="@+id/labelUserBloqueo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/label_blocked"
            android:textColor="@color/textPrimary"
            android:layout_marginTop="12dp" />

        <Switch
            android:id="@+id/switchUserBloqueo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:checked="false" />

        <Button
            android:id="@+id/buttonEditarConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:text="@string/edit"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>