<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.adminUi.UserDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textUserId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:text="@string/user_id_prefix"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            tools:text="id: 12345" />

        <TextView
            android:id="@+id/textUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="@string/user_name_prefix"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"
            tools:text="nombre: User Name" />

        <TextView
            android:id="@+id/textUserEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="@string/user_email_prefix"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"
            tools:text="email: user@example.com" />

        <TextView
            android:id="@+id/textUserCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="@string/user_created_prefix"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"
            tools:text="creado: 2024-01-01" />

        <TextView
            android:id="@+id/textUserAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="@string/user_admin_prefix"
            android:textColor="@color/textSecondary"
            android:textSize="18sp"
            tools:text="admin: false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textUserBloqueoLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
        android:text="@string/label_blocked"
                android:textColor="@color/textSecondary"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/switchUserBloqueo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="UseSwitchCompatOrMaterial3"
                tools:checked="false" />
        </LinearLayout>

        <Button
            android:id="@+id/buttonActualizarBloqueo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
        android:text="@string/update_block" />

        <Button
            android:id="@+id/buttonEditar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="@string/edit" />

        <Button
            android:id="@+id/buttonEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
        android:text="@string/delete"
            android:backgroundTint="@android:color/holo_red_dark"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>